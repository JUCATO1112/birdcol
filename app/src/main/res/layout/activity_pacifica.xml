<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityPacifica">

    <ImageView
        android:id="@+id/pacificaSubt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="@string/subPacifica"
        app:layout_constraintBottom_toTopOf="@+id/scrollView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pacifica_subtitle"
        tools:ignore="ImageContrastCheck" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pacificaSubt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="#CDFFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="auto"
                android:foregroundTint="#9CEFEAEA"
                android:background="@color/white"
                android:layout_marginBottom="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/cotinga"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/im"
                    android:layout_margin="10sp"
                    app:srcCompat="@drawable/cotinga" />

                <TextView
                    android:id="@+id/tv_inf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/infoCotinga"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/cotingaSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#003A60"
                    android:layout_margin="10sp"
                    android:text="@string/reproducir_sound1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="auto"
                android:foregroundTint="#9CEFEAEA"
                android:background="@color/white"
                android:layout_marginBottom="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/guacamayo"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/im"
                    android:layout_margin="10sp"
                    app:srcCompat="@drawable/guacamayo" />

                <TextView
                    android:id="@+id/tv_inf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/infoGuacamato"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/guacamayoSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#003A60"
                    android:layout_margin="10sp"
                    android:text="@string/reproducir_sound1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="auto"
                android:foregroundTint="#9CEFEAEA"
                android:layout_marginBottom="10sp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/tucan"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/im"
                    android:layout_margin="10sp"
                    app:srcCompat="@drawable/tucan" />

                <TextView
                    android:id="@+id/tv_inf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/infoTucan"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/tucanSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#003A60"
                    android:layout_margin="10sp"
                    android:text="@string/reproducir_sound1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="auto"
                android:foregroundTint="#9CEFEAEA"
                android:layout_marginBottom="10sp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/gaviotin"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/im"
                    android:layout_margin="10sp"
                    app:srcCompat="@drawable/gaviotin" />

                <TextView
                    android:id="@+id/tv_inf4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/infoGaviotin"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/gaviotinSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#003A60"
                    android:layout_margin="10sp"
                    android:text="@string/reproducir_sound1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="auto"
                android:foregroundTint="#9CEFEAEA"
                android:layout_marginBottom="10sp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/paujil"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/im"
                    android:layout_margin="10sp"
                    app:srcCompat="@drawable/paujil" />

                <TextView
                    android:id="@+id/tv_inf5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:text="@string/infoPaujil"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/paujilSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#003A60"
                    android:layout_margin="10sp"
                    android:text="@string/reproducir_sound1" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>